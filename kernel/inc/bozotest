#pragma once

#include <stdint.h>
#include <stdbool.h>
#include <kprintf>
#include <sys/idt.hpp>

namespace bozotest {

inline void assert(bool condition, const char* message) {
  if (!condition) {
    kprintf("\n\n\n -- Offending test: %s\n", message);
    intr::kpanic(NULL, "TEST FAILED");
  } else {
    kprintf(" -> TEST PASSED: %s\n", message);
  }
}

}