#include <stddef.h>
#include <kmalloc>
#include <sys/idt.hh>

void* operator new(size_t size);
void operator delete(void* ptr) noexcept;
void operator delete(void* ptr, size_t) noexcept;
void* operator new[](size_t size);
void operator delete[](void* ptr) noexcept;
void operator delete[](void* ptr, size_t) noexcept;
void* operator new(size_t, void* ptr) noexcept;
void operator delete(void*, void*) noexcept;